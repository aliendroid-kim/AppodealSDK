<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    android:layout_centerInParent="true"
    android:background="@color/native_background"
    android:orientation="vertical">

    <com.appodeal.ads.NativeAdView
        android:id="@+id/native_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/native_ad_sponsored_label2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@color/native_button"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:lines="1"
                    android:padding="2dp"
                    android:text="Ads"
                    android:textColor="@color/native_title"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_age_restriction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/native_title" />

                <FrameLayout
                    android:id="@+id/provider_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp">

                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.appodeal.ads.NativeIconView
                    android:id="@+id/icon"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    tools:visibility="visible"></com.appodeal.ads.NativeIconView>

                <com.appodeal.ads.NativeMediaView
                    android:id="@+id/appodeal_media_view_content"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:visibility="gone">

                </com.appodeal.ads.NativeMediaView>

                <RatingBar
                    android:id="@+id/rb_rating"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:lines="1"
                            android:textAlignment="center"
                            android:textColor="@color/native_title"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textColor="@color/native_title"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/b_cta"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="@color/native_button"
                        android:gravity="center"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:textColor="@color/native_text_button"
                        android:visibility="visible"
                        app:backgroundTint="@color/native_button" />

                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </com.appodeal.ads.NativeAdView>

</LinearLayout>